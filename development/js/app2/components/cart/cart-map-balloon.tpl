<div class="cart-balloon">
	<button class="cart-balloon__close-btn" data-btn="close">X</button>

	<div class="cart-balloon__address">$[properties.address]</div>

	<div class="cart-balloon__info">
		<div>
			<div class="cart-balloon__label">Часы работы:</div>
			<div class="cart-balloon__value">$[properties.time]</div>
		</div>
		<div>
			<div class="cart-balloon__label">Можно забрать:</div>
			<div class="cart-balloon__value">Сегодня</div>
		</div>
	</div>

	<div class="b-button cart-balloon__select-btn" data-btn="select" data-shopid="$[properties.shopid]">выбрать магазин для самовывоза</div>
</div>
